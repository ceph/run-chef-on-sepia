#!/bin/sh
set -e

# ssh ubuntu@chef-NAME-server.front.sepia.ceph.com <install-chef-server

SERVER_URL="http://$(hostname).front.sepia.ceph.com:4000/"

sudo apt-key add - <<'EOF'
